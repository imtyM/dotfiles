"free space button
unmap <Space>
map srn console source ~/.config/ranger/rc.conf

"config files
map cvm chain shell nvim ~/.dotfiles/vim/vimrc; source ~/.config/ranger/rc.conf
map cvp shell nvim ~/.dotfiles/vim/plugins
map cvs shell nvim ~/.dotfiles/vim/mappings
map cvt shell nvim ~/.dotfiles/vim/theme
map cvc shell nvim ~/.dotfiles/vim/coc.vim
map cvb shell nvim ~/.dotfiles/vim/base.vim
map czs shell nvim ~/.dotfiles/zsh/zshrc
map ctm shell nvim ~/.dotfiles/tmux/tmux.conf
map crn shell nvim ~/.dotfiles/ranger/rangerrc
map crm shell nvim ~/.dotfiles/ranger/goto_mappings
map oo shell open %s

"file minipulations
map dir console mkdir%space
map dlyy shell rm -rf %s
map dt console touch%space
map drmyy shell rm -rf %s

"marking files
map v mark_files toggle=True
map <Space>v mark_files all=True toggle=True

"wal
map <Space>bg shell wal -i %s

"filter typing
map f console scout -ftsea%space
map <C-f> fzf_select
map <C-g> fzf_locate


"goto mappings
source ~/dotfiles/ranger/goto_mappings

"move file mappings
map dmpr shell mv %s ~/Project/
map dmpi shell mv %s ~/Project/Images/

"device synicing
map <Space>syncmusic shell adb-sync --reverse /sdcard/Music/ ~/Music

"compression stuff
map uzip shell unzip %s
